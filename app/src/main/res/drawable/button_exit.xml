<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer soft shadow -->
    <item
        android:top="6dp"
        android:left="0dp"
        android:right="4dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#00000000"
                android:centerColor="#20000000"
                android:endColor="#35000000"
                android:type="linear"/>
            <corners android:radius="26dp"/>
        </shape>
    </item>
    
    <!-- Dark border for depth -->
    <item
        android:bottom="6dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#7F0000"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>
    
    <!-- Main button with multi-stop gradient -->
    <item
        android:bottom="7dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#EF5350"
                android:centerColor="#f44336"
                android:endColor="#B71C1C"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Inner highlight edge -->
    <item
        android:bottom="7dp"
        android:left="3dp"
        android:right="3dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#50FFFFFF"/>
            <corners android:radius="23dp"/>
            <padding 
                android:left="20dp"
                android:right="20dp"
                android:top="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>
    
    <!-- Top glossy shine (upper half) -->
    <item
        android:bottom="7dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#60FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Specular highlight spot (top center) -->
    <item
        android:bottom="7dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#70FFFFFF"
                android:centerColor="#30FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="radial"
                android:gradientRadius="40dp"/>
        </shape>
    </item>
</layer-list>
